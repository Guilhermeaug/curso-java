package oo.heranca.desafio;

public class Carro {
	double velocidadeAtual;
	final int VELOCIDADE_MAXIMA;
	
	Carro(int velocidadeMaxima){
		VELOCIDADE_MAXIMA = velocidadeMaxima;
	}
	
	void acelerar() {
		velocidadeAtual += 5;
	}
	
	void frear() {
		if(velocidadeAtual >= 5) {
			velocidadeAtual -= 5;
		} else {
			velocidadeAtual = 0;
		}
		
	}
}
