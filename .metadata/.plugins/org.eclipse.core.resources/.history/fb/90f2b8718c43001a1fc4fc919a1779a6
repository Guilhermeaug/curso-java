package oo.heranca.desafio;

public class Sistema {
	public static void main(String[] args) {
		Ferrari ferrari = new Ferrari();
		Civic civic = new Civic();
		
		System.out.println("A ferrari está a => " + ferrari.velocidadeAtual + " km/h");
		System.out.println("O Civic está a => " + civic.velocidadeAtual + " km/h");
		
		ferrari.acelerar();
		civic.acelerar();
		
		System.out.println("A ferrari está a => " + ferrari.velocidadeAtual + " km/h");
		System.out.println("O Civic está a => " + civic.velocidadeAtual + " km/h");
	}
}
